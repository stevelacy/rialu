@import 'colors'
@import 'color-classes'


// vars

font = 'Raleway', sans-serif;

*
  margin 0
  padding 0
*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing: border-box

html
  width 100%
  height 100%

body
  font-family font
  width 100%
  height 100%

a
  color #000
  text-decoration none



// input elements
input, textarea
  border 1px solid white
  outline none
  padding 10px
  font-family font
  &:focus
    border 1px solid white-shade  
button, input[type='submit'] 
  padding 10px
  background white-pure
  border none
  border-bottom 2px solid light-grey
  box-shadow 0 0 2px light-grey
  margin 5px
input[type='text']
  width 90%
  margin 10px
select
  padding 5px
  background none
  border 1px solid white-shade
button:hover, input[type='submit']:hover
  background light-grey


// style classes

.spacer
  height 100px
.spacer-25
  height 50px
.z-index-5
  z-index 5


// content areas

.main-box
  text-align center !important
  width 100%
  height 100%
  padding-top 50px

.button-green{
  background: #659D32;
  color: #fff;
}
.button-green:hover{
  background: #608341;
}

.location
  position absolute
  top 20px
  left 5%
  height 80%
  width 90%

.close
  position absolute
  right 1%
  top 10px
  width 50px
  height 50px  
  font-size: 2em

.login-box
  width 80%
  height 150px
  padding 50px 0 0 0
  margin 10% 0 0 10%
  background #efefef
  text-align center
  box-shadow 0 0 1px #cdcdcd

.login-box .twitter
  min-width 150px
  max-width 70%
  height 40px
  padding 10px
  display inline-block
  box-shadow 0 0 1px #cdcdcd


.toast
  position absolute
  bottom 10%
  left 0
  right 0
  margin 0 auto 0 auto
  width 200px
  height 50px
  text-align center
  padding 10px
  background rgba(0, 0, 0, .8)
  box-shadow 0 0 5px black
  color light-grey
  z-index 10


// class style hacks

.height-100
  height 100px
  min-height 100px !important

.height-75
  height 75px
  min-height 75px !important

.inline-block
  display inline-block !important


// Semantic UI style fixes
.ui.items>.item
  border-radius 0 !important



// Jquery UI theme fixes:
.volume .slider
  position relative
  height 12px
  outline-color transparent
  .ui-slider-handle
    position absolute
    top -10px
    height 30px
    width 30px
    border-radius 15px
    outline none

.volume .tooltip
  width 30%
  height 75px


.ui-state-hover, .ui-widget-content .ui-state-hover, .ui-widget-header .ui-state-hover, .ui-state-focus, .ui-widget-content .ui-state-focus, .ui-widget-header .ui-state-focus, .ui-state-active, .ui-widget-content .ui-state-active
  outline none
  border none
  box-shadow 0 0 2px light-grey
  background white-pure
  
