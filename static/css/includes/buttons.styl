.button
  @extend .border-box
  height 15px
  min-width 30px
  padding 10px
  outline none
  margin 10px
  border none
  background #cdcdcd
  text-align center
  font-size 16px
  &.green
    background green
    color #fff
  &.blue
    background blue
    color #fff
  &.red
    background red
    color #fff
